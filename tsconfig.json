{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/miniprogram/*"
      ],
      "@base/*": [
        "src/miniprogram/base/*"
      ],
      "@utils/*": [
        "src/miniprogram/utils/*"
      ],
      "@config/*": [
        "src/miniprogram/config/*"
      ],
      "@image/*": [
        "src/miniprogram/image/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings",
  ],
  "exclude": [
    "node_modules"
  ]
}